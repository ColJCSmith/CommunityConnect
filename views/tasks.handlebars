<div class="card-deck">
    {{#each task}}
    {{#unless allocated}}
    <div class="card border-dark mb-3" id="{{ this.id }}" style="max-width: 18rem;">
        <div class="card-header">{{ this.category }}</div>
        <div class="card-body text-dark">
            <h5 class="card-title">{{ this.title }}</h5>
            <p class="card-text">{{ this.description }}</p>
            <button type="submit" class="btn btn-dark">ACCEPT TASK</button>
        </div>
    </div>
    {{/unless}}
    {{/each}}
</div>